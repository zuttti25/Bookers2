<p id="notice">
  <%= notice %>
</p>

<% if @book.errors.any? %>
  <%= @book.errors.count %>error prohibited this obj from being saved:
  <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/User-info', user: @user %>
      <%= render 'books/New-book', book: @new_book %>
    </div>
     <div class="col-md-8 offset-md-1">
      <table class="table table-main">
      <h2>Book detail</h2>
        <tr>
          <td>
            <%= link_to user_path(@book.user.id) do %>
              <%= attachment_image_tag @book.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %>
            <% end %>
              <%= link_to @user.name, user_path(@book.user.id) %>
          </td>
          <td>
            <%= link_to @book.title, book_path(@book.id) %>
          </td>
          <td>
            <%= @book.body %>
          </td>
          <% if current_user.id == @book.user_id %>
          <td>
            <%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-success" %>
          </td>
          <td>
            <%= link_to "Destroy", book_path(@book.id), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-danger" %>
          </td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>